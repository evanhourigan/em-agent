{
  "title": "Approvals & HITL",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "panels": [
    {
      "type": "timeseries",
      "title": "Approvals Overrides (from→to)",
      "targets": [
        {
          "expr": "sum(rate(approvals_override_total[5m])) by (from,to)",
          "legendFormat": "{{from}}→{{to}}"
        }
      ],
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Workflows Auto vs HITL",
      "targets": [
        {
          "expr": "sum(rate(workflows_auto_vs_hitl_total[5m])) by (mode)",
          "legendFormat": "{{mode}}"
        }
      ],
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 0 }
    },
    {
      "type": "stat",
      "title": "HITL Approvals Last 1h",
      "targets": [
        {
          "expr": "sum(increase(approvals_decisions_total{status=\"approve\"}[1h]))",
          "legendFormat": "approved"
        }
      ],
      "gridPos": { "h": 5, "w": 6, "x": 0, "y": 9 }
    },
    {
      "type": "stat",
      "title": "Overrides Last 1h",
      "targets": [
        {
          "expr": "sum(increase(approvals_override_total[1h]))",
          "legendFormat": "overrides"
        }
      ],
      "gridPos": { "h": 5, "w": 6, "x": 6, "y": 9 }
    }
  ]
}

